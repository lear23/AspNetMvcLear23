@model SignInViewModel


<section class="signIn">

    <div class="custom-container flex justify-center items-center">
        <form method="post" class="block w-full sm:w-[90%] md:w-[75%] lg:w-[55%] xl:w-[60%] p-7" novalidate>

            <div>
                @Model.ErrorMessage
            </div>

            <h1 class="text-2xl font-bold mb-4">Welcome Back</h1>
            <p class="text-xs mb-4">Don’t have an account yet? <a asp-controller="Auth" asp-action="SignUp" class="text-blue-600">Sign up here</a>.</p>

            <div class="flex flex-col mb-5">
                <label asp-for="Model.Email" class="font-bold mb-1"><b>Email</b></label>
                <span asp-validation-for="Model.Email" class="text-red-500"></span>
                <input asp-for="Model.Email" placeholder="Enter your email address" class="p-2 mt-1 border-2 border-gray-200 rounded-lg w-full placeholder-gray-500 text-sm">
            </div>

            <div class="flex flex-col mb-5">
                <label asp-for="Model.Password" class="font-bold mb-1"><b>Password</b></label>
                <span asp-validation-for="Model.Password" class="text-red-500"></span>
                <input asp-for="Model.Password" placeholder="********" class="p-2 mt-1 border-2 border-gray-200 rounded-lg w-full placeholder-gray-500 text-sm">
            </div>


            <div class="mb-6">
                <input asp-for="Model.RememberMe" type="checkbox">
                <label asp-for="Model.RememberMe" for="checkbox">Remember Me</label>
            </div>

            <button type="submit" class="btn-theme bg-blue-500 text-white py-2 my-6 rounded-lg hover:bg-blue-600">Sign In</button>
            <a class="" asp-controller="Account" asp-action="Forgot">Forgot your password?</a>
            <hr class="my-6">
            <h5 class="my-4"><b>Or sign in with your social network</b></h5>
            <div class="flex justify-center items-center gap-12">
                <a class="btn-gray" asp-action="Google" asp-controller="Auth"><img src="images/bxl-google.svg" alt="">Google</a>
                <a class="btn-gray" asp-action="Facebook" asp-controller="Auth"><img src="images/bxl-facebook.svg" alt="">Facebook</a>
            </div>
        </form>

    </div>

</section>